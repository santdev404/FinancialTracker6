<h2>User details</h2>


<div class="card card-header results-block">
    <table class="col-md-12">
        <tbody>
            
                <tr>
                    <td><strong>Name:</strong><%= @user.first_name%> </td>
                    <td><strong>Email:</strong><%= @user.email%> </td>
                    <td></td>

                    <% if current_user.not_friends_with?(@user.id) %>
                        <td><%= link_to 'Follow friend?', friendships_path(friend: @user), class: 'btn btn-success', method: :post %></td>
                    <%else%>
                    
                        <td>
                            <span class="badge badge-secondary">
                            You are friends
                            </span>
                        </td>
                    <% end %>
                </tr>
            
        </tbody>
    </table>  
    


</div>

<% if !@tracked_stocks.empty?%>
    <%= render '/stocks/list' %>
<%else%>
    <p class="lead">This user in not tracking any stocks</p>
<%end%>