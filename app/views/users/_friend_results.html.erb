<div class="results-block">
    <%= render 'layouts/messages' %>
</div>


<% if @friends %>

    <div class="card card-header results-block">
        <table class="col-md-12">
            <tbody>
                <% @friends.each do | friend | %>
                    <tr>
                        <td><strong>Name:</strong><%= friend.first_name%> </td>
                        <td><strong>Email:</strong><%= friend.email%> </td>
                        <td><strong>Profile:</strong><%= link_to "View profile", '#', class: 'btn btn-primary' %></td>

                        <% if current_user.not_friends_with?(friend.id) %>
                            <td><%= link_to 'Follow friend?', friendships_path(friend: friend), class: 'btn btn-success', method: :post %></td>
                        <%else%>
                        
                            <td>
                                <span class="badge badge-secondar">
                                You are friends
                                </span>
                            </td>
                        <% end %>
                    </tr>
                <% end %>   
            </tbody>
        </table>              
    </div>
    
<%end%>